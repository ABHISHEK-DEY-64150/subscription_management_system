<html>
  <head>
    <style>
    </style>
  </head>
  <body>
    <h1>Reviews</h1>

    <table>
      <thead>
        <tr>
          <th>Customer ID</th>
          <th>Title</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <% @reviews.each do |review| %>
          <tr>
            <td><%= review.customer_id %></td>
            <td><%= review.title %></td>
            <td><%= review.description %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </body>
</html>
