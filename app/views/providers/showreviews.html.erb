<html>
<head>
<style>
.cyan-cell {
  background-color: cyan;
}

</style>
</head>
<body>
<h1>Reviews</h1>

<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Customer ID</th>
      <th>Provider ID</th>
      <th>Title</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td class="cyan-cell"><%= review.customer_id %></td>
        <td class="cyan-cell"><%= review.provider_id %></td>
        <td class="cyan-cell"><%= review.title %></td>
        <td class="cyan-cell"><%= review.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</body>
</html>