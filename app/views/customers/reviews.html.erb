<html>
  <head>
    <meta charset="UTF-8" />
    <title>Reviews </title>
    <%= stylesheet_link_tag "review", "data-turbo-track": "reload" %>
    <script src="https://use.fontawesome.com/a6f0361695.js"></script>
    <style>
      .card {
        background-color: #d5f2e3;
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        margin-bottom: 10px;

        /* Add a shadow to the card */
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);

        /* Add a slight gradient to the background color */
        background-image: linear-gradient(to bottom, #d5f2e3 0%, #d2e9dd 100%);
      }

      .card h2 {
        /* Make the heading text bold and larger */
        font-weight: bold;
        font-size: 1.2em;
      }

      .card p {
        /* Make the paragraph text smaller and lighter */
        font-size: 0.9em;
        font-weight: lighter;
      }
    </style>
  </head>
  <body>
    <div class="card">
     
    <h1 id="fh2">Review Form</h1>
    
      <%= form_with(model: @review, id: "feedback" , url: "/createNewReview", local: true) do |form| %>
        <%= form.fields_for :review do |review_form| %>
          <div class="form-group">
            <%= review_form.hidden_field :customer_id, value: session[:customer_id] %>
          </div>

          <div class="form-group">
            <%= review_form.hidden_field :provider_id, value: Customer.find_by(id:session[:customer_id]).provider_id %>
          </div>

           <div class="pinfo">Title</div>

           <div class="form-group">
            <div class="col-md-4 inputGroupContainer">
             <div class="input-group">
              <span class="input-group-addon">
                <i class="fa fa-envelope"></i>
                </span>
                <%= review_form.text_field :title, class: "form-control" %>
             </div>
            </div>
           </div>

          <div class="pinfo">Description</div>

          <div class="form-group">
            <div class="col-md-4 inputGroupContainer">
             <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-pencil"></i></span>
              <%= review_form.text_area :description,   class: "form-control" ,id: "review" ,rows: "3" %>
           </div>
          </div>
        </div>
        <% end %>
        <%= form.submit "Submit", class: "btn btn-primary" %>
        
      <% end %>
    </div>

<div>

  </body>
</html>
