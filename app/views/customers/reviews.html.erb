<h1>Review Form</h1>

<%= form_with(model: @review, url: "/createNewReview", local: true) do |form| %>
  <div>
    <%= form.hidden_field :customer_id %>
  </div>

  <div>
    <%= form.label :provider_id %>
    <%= form.text_field :provider_id %>
  </div>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.submit "Submit" %>
  </div>
<% end %>